{
    "name": "@flowtr/panel-backend",
    "version": "0.0.1",
    "private": true,
    "description": "Flowtr panel backend",
    "main": "./dist/index.js",
    "types": "./dist/index.d.ts",
    "bin": {
        "fdpla": "./dist/cli.js"
    },
    "config": {
        "commitizen": {
            "path": "cz-conventional-changelog"
        }
    },
    "scripts": {
        "cm": "cz",
        "build": "tsc",
        "dev": "nodemon --watch src --ext ts,js --exec \"pnpm run build && pnpm run start\"",
        "start": "node dist/cli.js run",
        "cli": "node dist/cli.js",
        "prepublishOnly": "pnpm run lint && pnpm run test && pnpm run build",
        "test": "ts-mocha test/**/*.ts",
        "lint": "eslint {src,test}/**/*.ts --fix",
        "coverage": "nyc ts-mocha test/**/*.ts"
    },
    "keywords": [
        "typescript",
        "node"
    ],
    "author": "Theo Paris",
    "license": "GPL-3.0-or-later",
    "devDependencies": {
        "@types/bcrypt": "5.0.0",
        "@types/chai": "4.2.19",
        "@types/cors": "2.8.10",
        "@types/dockerode": "3.2.4",
        "@types/express": "4.17.12",
        "@types/jsonwebtoken": "8.5.3",
        "@types/mocha": "8.2.2",
        "@types/node": "15.12.1",
        "@types/yargs": "17.0.2",
        "@typescript-eslint/eslint-plugin": "4.28.2",
        "@typescript-eslint/parser": "4.28.2",
        "chai": "4.3.4",
        "commitizen": "4.2.4",
        "cz-conventional-changelog": "3.3.0",
        "eslint": "7.30.0",
        "eslint-config-prettier": "8.3.0",
        "eslint-plugin-prettier": "3.4.0",
        "mocha": "9.0.2",
        "nodemon": "2.0.12",
        "nyc": "15.1.0",
        "prettier": "2.3.2",
        "ts-mocha": "8.0.0",
        "typescript": "4.3.5"
    },
    "dependencies": {
        "@flowtr/panel-sdk": "workspace:^0.0.1",
        "@theoparis/config": "1.0.5",
        "axios": "0.21.1",
        "bcrypt": "5.0.1",
        "cors": "2.8.5",
        "dockerode": "3.3.0",
        "express": "4.17.1",
        "jsonwebtoken": "8.5.1",
        "nanoid": "3.1.23",
        "pg": "8.6.0",
        "typeorm": "0.2.34",
        "yargs": "17.0.1",
        "zod": "3.5.1"
    }
}
